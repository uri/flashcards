<%= form_for [@notebook,@page] do |f| %>
  
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %>
  <%= f.text_area :content, :class => "content" %>  
  <br>
  <%= f.label :tags %>
  <%= f.text_field :tag_list %>
  <br>
  <%= f.submit :class => "btn btn-success" %>

<% end %>